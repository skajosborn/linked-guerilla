---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MessagingInterface from '../components/MessagingInterface';
import RotatingReviews from '../components/RotatingReviews';
---

<Layout>
  <Header />
  
<!-- Hero Section (MATCHES MOCKUP) -->


  <!-- Hero background -->
  <div
    class="relative text-white min-h-[500px] flex items-center overflow-hidden"
    style="background: #000000;"
  >

    <div class="container mx-auto px-4 relative z-10 py-8 md:py-12">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 lg:gap-10 items-center">
        <!-- Video - Shows first on mobile, left on desktop -->
        <div class="order-1 lg:order-none lg:col-span-5 flex justify-end relative -mt-8 lg:-mt-8 w-full">
          <!-- Subtle glow halo behind gorilla -->
          <div class="absolute inset-0 flex items-center justify-end pointer-events-none">
            <div class="w-[480px] h-[480px] rounded-full blur-3xl opacity-20" style="background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);"></div>
          </div>
          <div class="relative w-full max-w-[550px] flex justify-end" style="margin-right: 20px;">
            <video 
              src="/linkedinfluid2.mp4" 
              autoplay
              muted
              playsinline
              class="w-full max-w-[550px] h-auto"
              style="filter: brightness(1) contrast(1); display: block; vertical-align: top;"
            >
              Your browser does not support the video tag.
            </video>
          </div>
        </div>

        <!-- Text - Shows second on mobile, right on desktop -->
        <div class="order-2 lg:order-none lg:col-span-7 lg:col-start-6 text-center lg:text-left">
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold tracking-tight text-white">
            Turn <span class="bg-gradient-to-r from-gray-500 to-gray-700 bg-clip-text text-transparent" style="text-shadow: 0 0 5px rgba(107,114,128,0.5), 0 0 10px rgba(107,114,128,0.3);">LinkedIn</span> Into<br />a Lead Machine
          </h1>

          <p class="text-lg sm:text-xl md:text-2xl mt-4 md:mt-5 text-white/85">
            AI-powered LinkedIn management for founders,<br />teams, and recruiters who want real results.
          </p>

          <div class="mt-6 md:mt-9 flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a
              href="#contact"
              class="bg-gradient-to-br from-gray-500 to-gray-700 text-white px-6 sm:px-8 py-2.5 sm:py-3 rounded-lg font-semibold hover:from-gray-600 hover:to-gray-800 transition shadow-sm text-sm sm:text-base"
            >
              Book Free Strategy Call
            </a>

            <a
              href="#services"
              class="bg-[#1f2326] text-white px-6 sm:px-8 py-2.5 sm:py-3 rounded-lg font-semibold hover:bg-[#2a2d2f] transition shadow-sm text-sm sm:text-base"
            >
              See How It Works
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

  <!-- Services Section -->
  <section id="services" class="pt-20 pb-0 bg-gray-800">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold text-gray-100 mb-4 text-center">Our Services</h2>
          <p class="text-xl text-gray-400 max-w-2xl mx-auto mt-8 pb-12">
            Comprehensive lead generation solutions tailored to your business needs
          </p>
        </div>
        
        <!-- Presentation Style Layout -->
        <div class="relative pt-16 lg:pt-24 pb-64 lg:pb-80" style="min-height: 800px;">
          <!-- SVG Lines Container -->
          <svg class="absolute inset-0 w-full h-full pointer-events-none" style="z-index: 1;">
            <!-- Lines will be drawn from cards to center SVG -->
            <line id="line-1" x1="0" y1="0" x2="0" y2="0" stroke="#20B2AA" stroke-width="2" stroke-dasharray="5,5" opacity="0.5" class="hidden lg:block"></line>
            <line id="line-2" x1="0" y1="0" x2="0" y2="0" stroke="#20B2AA" stroke-width="2" stroke-dasharray="5,5" opacity="0.5" class="hidden lg:block"></line>
            <line id="line-3" x1="0" y1="0" x2="0" y2="0" stroke="#20B2AA" stroke-width="2" stroke-dasharray="5,5" opacity="0.5" class="hidden lg:block"></line>
            <line id="line-4" x1="0" y1="0" x2="0" y2="0" stroke="#20B2AA" stroke-width="2" stroke-dasharray="5,5" opacity="0.5" class="hidden lg:block"></line>
            <line id="line-5" x1="0" y1="0" x2="0" y2="0" stroke="#20B2AA" stroke-width="2" stroke-dasharray="5,5" opacity="0.5" class="hidden lg:block"></line>
            <line id="line-6" x1="0" y1="0" x2="0" y2="0" stroke="#20B2AA" stroke-width="2" stroke-dasharray="5,5" opacity="0.5" class="hidden lg:block"></line>
          </svg>

          <!-- Center SVG -->
          <div class="flex justify-center items-center mb-12 lg:mb-0 lg:absolute lg:top-1/2 lg:left-1/2 lg:transform lg:-translate-x-1/2 lg:-translate-y-1/2" style="position: relative; z-index: 2;">
            <div id="center-svg" class="flex justify-center">
              <img 
                src="/Asset-3.svg" 
                alt="Asset 3"
                class="w-full max-w-md lg:max-w-lg h-auto"
              />
            </div>
          </div>

          <!-- Service Cards arranged around center -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 relative" style="z-index: 2;">
            <!-- Prospecting - Top Left -->
            <div id="card-1" class="bg-black p-6 rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 lg:absolute lg:top-8 lg:left-4 lg:w-64">
              <div class="w-12 h-12 bg-gradient-to-br from-gray-500 to-gray-700 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-primary-300 mb-3">Prospecting</h3>
              <p class="text-sm text-gray-100">
                Pick your prospects with all of the power of LinkedIn: the world's premier B2B database. Read on to find just how specific we can get!
              </p>
            </div>

            <!-- 20 Invites/Day - Bottom Right -->
            <div id="card-2" class="bg-black p-6 rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 lg:absolute lg:bottom-8 lg:right-4 lg:w-64">
              <div class="w-12 h-12 bg-gradient-to-br from-gray-500 to-gray-700 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-primary-300 mb-3">20 Invites/Day</h3>
              <p class="text-sm text-gray-100">
                Our team will send the LI's maximum number of invites daily. This is about 3x as effective as 20 cold calls a day.
              </p>
            </div>

            <!-- Follow-up - Top Right -->
            <div id="card-3" class="bg-black p-6 rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 lg:absolute lg:top-8 lg:right-4 lg:w-64">
              <div class="w-12 h-12 bg-gradient-to-br from-gray-500 to-gray-700 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-primary-300 mb-3">Follow-up</h3>
              <p class="text-sm text-gray-100">
                Send new connections detailed value propositions, longer introductions, or a link into your sales funnel. New connections gained are able to remarketed to without limits!
              </p>
            </div>

            <!-- Endorsement Exposure - Bottom Left -->
            <div id="card-4" class="bg-black p-6 rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 lg:absolute lg:bottom-8 lg:left-4 lg:w-64">
              <div class="w-12 h-12 bg-gradient-to-br from-gray-500 to-gray-700 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-primary-300 mb-3">Endorsement Exposure</h3>
              <p class="text-sm text-gray-100">
                We'll endorse prospects' skills, like their posts, and follow them for additional visibility and engagement.
              </p>
            </div>

            <!-- Turnkey - Bottom Center -->
            <div id="card-5" class="bg-black p-6 rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 lg:absolute lg:bottom-8 lg:left-1/2 lg:transform lg:-translate-x-1/2 lg:w-64">
              <div class="w-12 h-12 bg-gradient-to-br from-gray-500 to-gray-700 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-primary-300 mb-3">Turnkey</h3>
              <p class="text-sm text-gray-100">
                We do all the work, using your exact messaging. You simply check your messages and respond to warm leads.
              </p>
            </div>

            <!-- Maximal, Optimized, Legal - Top Center -->
            <div id="card-6" class="bg-black p-6 rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 lg:absolute lg:top-8 lg:left-1/2 lg:transform lg:-translate-x-1/2 lg:w-64">
              <div class="w-12 h-12 bg-gradient-to-br from-gray-500 to-gray-700 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-primary-300 mb-3">Maximal, Optimized, Legal</h3>
              <p class="text-sm text-gray-100">
                Unlike some competitors, we have pushed the limits to research this service and ensure everything we do is fully compliant and optimized for results.
              </p>
            </div>
          </div>
        </div>

        <script>
          // Draw connecting lines from cards to center SVG
          function drawConnectingLines() {
            if (window.innerWidth < 1024) return; // Only on desktop
            
            const centerSvg = document.getElementById('center-svg');
            if (!centerSvg) return;
            
            const centerRect = centerSvg.getBoundingClientRect();
            const containerRect = centerSvg.closest('.relative').getBoundingClientRect();
            const centerX = centerRect.left + centerRect.width / 2 - containerRect.left;
            const centerY = centerRect.top + centerRect.height / 2 - containerRect.top;
            
            for (let i = 1; i <= 6; i++) {
              const card = document.getElementById(`card-${i}`);
              const line = document.getElementById(`line-${i}`);
              if (!card || !line) continue;
              
              const cardRect = card.getBoundingClientRect();
              const cardX = cardRect.left + cardRect.width / 2 - containerRect.left;
              const cardY = cardRect.top + cardRect.height / 2 - containerRect.top;
              
              line.setAttribute('x1', cardX);
              line.setAttribute('y1', cardY);
              line.setAttribute('x2', centerX);
              line.setAttribute('y2', centerY);
            }
          }
          
          // Draw lines on load and resize
          if (typeof window !== 'undefined') {
            window.addEventListener('load', drawConnectingLines);
            window.addEventListener('resize', drawConnectingLines);
            // Also draw after a short delay to ensure layout is complete
            setTimeout(drawConnectingLines, 100);
          }
        </script>
      </div>
    </div>
  </section>

